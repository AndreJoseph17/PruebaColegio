@model IEnumerable<WebApplication2.Models.Grado>


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    <a class="btn btn-primary active" role="button" aria-pressed="true" asp-action="Create">Crear Grado</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdProfesor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdProfesor)
            </td>
            <td>
                        <a class="btn btn-success active" role="button" aria-pressed="true" asp-action="Edit" asp-route-id="@item.IdGrado">Editar</a> 
                        <a class="btn btn-info active" role="button" aria-pressed="true" asp-action="Details" asp-route-id="@item.IdGrado">Detalle</a> 
                        <a class="btn btn-warning active" role="button" aria-pressed="true"  asp-action="Delete" asp-route-id="@item.IdGrado">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
